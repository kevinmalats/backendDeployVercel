{
    "version": 2,
    "env": {
        "PORT": "@PORT",
        "DATABASE_NAME": "@DATABASE_NAME",
        "API_EXTERNAL": "@API_EXTERNAL",
        "DATABASE_URL": "@DATABASE_URL",
        "SECRET_KEY": "@SECRET_KEY"
    },
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        }
    ],
    
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        }
    ]
}